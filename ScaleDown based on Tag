workflow ScaleDownSqlElasticPool-BasedOnTag
{

    	$Conn = Get-AutomationConnection -Name AzureRunAsConnection
	Add-AzureRMAccount -ServicePrincipal -Tenant $Conn.TenantID `
	-ApplicationID $Conn.ApplicationID -CertificateThumbprint $Conn.CertificateThumbprint


<# Example of Tag : AutoScale : ScaleUpDay,ScaleUpHour,MaxDtu,DBMaxDtu,DBMinDtu,ScaleDownDay,ScaleDownHour,MinDtu
                            AutoScale : Mo,8,500,400,100,Fri,20,100 #>

#Converting UTC timezone to IST


$ISTZONE = [System.TimeZoneInfo]::FindSystemTimeZoneById("India Standard Time")
$ISTTIME = [System.TimeZoneInfo]::ConvertTimeFromUtc((Get-Date).ToUniversalTime(), $ISTZONE)


#Reading Current Date and Time


$CurrentTime = $ISTTIME.Hour
$CurrentDay = $ISTTIME.DayOfWeek

$DbServers = Get-AzureRmSqlServer | select ResourceGroupName,ServerName


$UPools = @(ForEach ($DbServer in $DbServers) {

(Get-AzureRmSqlElasticPool -ServerName $DbServer.ServerName -ResourceGroupName $DbServer.ResourceGroupName | Where-Object {$PSItem.Tags.Keys -eq "AutoScale"}).ResourceId})

$Pools = $UPools.Where({ $null -ne $_ })

ForEach -parallel ($Pool in $Pools) {

$RG = ($Pool -split '/')[4] 
$Server = ($Pool -split '/')[8]
$EP = ($Pool -split '/')[10]

$Edition = (Get-AzureRmSqlElasticPool -ServerName $Server -ResourceGroupName $RG -ElasticPoolName $EP).Edition
$OldDtu = (Get-AzureRmSqlElasticPool -ServerName $Server -ResourceGroupName $RG -ElasticPoolName $EP).Dtu
$Tag = (Get-AzureRmSqlElasticPool -ResourceGroupName $RG -ElasticPoolName $EP -ServerName $Server).Tags

$AutoScale = $Tag.AutoScale | ConvertFrom-String -Delimiter ","

If ($AutoScale) {

$DefinedDay = $AutoScale.P6
$DefinedTime = $AutoScale.P7
$Newdtu = $AutoScale.P8

if ($CurrentDay -match $DefinedDay -and $DefinedTime -eq $CurrentTime) {


Write-Output "Scaling Down eDTU for $EP from $OldDtu to $Newdtu"
Set-AzureRmSqlElasticPool –ResourceGroupName $RG –ServerName $Server –ElasticPoolName $EP -Edition $Edition –DatabaseDtuMax $Newdtu -DatabaseDtuMin '0' –Dtu $Newdtu 

            } 
        }
              
    }

}
